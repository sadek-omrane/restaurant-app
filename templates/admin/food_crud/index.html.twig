{% extends 'admin/index.html.twig' %}
{% block title %}Food index
{% endblock %}

{% block adminContent %}
	<div style="min-height: 70vh;">
		<h1 style="margin: 50px 0 40px 0;text-align: center;">Food index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Price</th>
					<th>Image</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for food in food %}
					<tr>
						<td>{{ food.id }}</td>
						<td>{{ food.name }}</td>
						<td>{{ food.price }}</td>
						<td>{{ food.image }}</td>

						<td>
							<a class="btn btn-primary" href="{{ path('app_admin_food_crud_show', {'id': food.id}) }}">show</a>
							<a class="btn btn-primary" href="{{ path('app_admin_food_crud_edit', {'id': food.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-primary" style="margin: 0 0 50px 0;" href="{{ path('app_admin_food_crud_new') }}">Create new</a>
	</div>
{% endblock %}
