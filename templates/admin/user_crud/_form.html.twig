<div style=" min-height: 50vh;display: flex;flex-direction: column; justify-content: center; align-items: center; margin: 0 0 30px 0;">
	<div style="width: 400px;">
		{{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
		<div class="col-12">
			{{ form_label(form.email) }}
			<div class="form-error">
				{{ form_errors(form.email) }}
			</div>
			{{ form_widget(form.email, {'attr': {'class': 'form-control frm-input'}}) }}
			<small>{{ form_help(form.email) }}</small>
		</div>
		<div class="col-12">
			{{ form_label(form.password) }}
			<div class="form-error">
				{{ form_errors(form.password) }}
			</div>
			{{ form_widget(form.password, {'attr': {'class': 'form-control frm-input'}}) }}
			<small>{{ form_help(form.password) }}</small>
		</div>
		<div class="col-12">
			{{ form_label(form.name) }}
			<div class="form-error">
				{{ form_errors(form.name) }}
			</div>
			{{ form_widget(form.name, {'attr': {'class': 'form-control frm-input'}}) }}
			<small>{{ form_help(form.name) }}</small>
		</div>
		<div class="col-12">
			{{ form_label(form.roles) }}
			<div class="form-error">
				{{ form_errors(form.roles) }}
			</div>
			{{ form_widget(form.roles, {'attr': {'class': 'form-control frm-input', 'style' : 'height: auto;'}}) }}
			<small>{{ form_help(form.roles) }}</small>
		</div>
		<div class="col-12">
			{{ form_label(form.cin) }}
			<div class="form-error">
				{{ form_errors(form.cin) }}
			</div>
			{{ form_widget(form.cin, {'attr': {'class': 'form-control frm-input'}}) }}
			<small>{{ form_help(form.cin) }}</small>
		</div>
		<div class="col-12">
			{{ form_label(form.phone) }}
			<div class="form-error">
				{{ form_errors(form.phone) }}
			</div>
			{{ form_widget(form.phone, {'attr': {'class': 'form-control frm-input'}}) }}
			<small>{{ form_help(form.phone) }}</small>
		</div>
		<div>
			<button style="width: 80px;" class="btn btn-primary">{{ button_label|default('Save') }}</button>


		</div>
		{{ form_end(form) }}

	</div>
</div>
